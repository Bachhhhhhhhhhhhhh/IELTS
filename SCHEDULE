    <script>
        function showSheet(sheetName) {
            // Hide all sheets
            const sheets = document.querySelectorAll('.sheet');
            sheets.forEach(sheet => sheet.classList.remove('active'));
            
            // Hide all tabs
            const tabs = document.querySelectorAll('.tab');
            tabs.forEach(tab => tab.classList.remove('active'));
            
            // Show selected sheet
            document.getElementById(sheetName).classList.add('active');
            
            // Show selected tab
            event.target.classList.add('active');
        }

        function downloadExcel() {
            alert('üîÑ ƒêang chu·∫©n b·ªã file Excel...\n\nFile s·∫Ω bao g·ªìm:\n‚Ä¢ 12 tu·∫ßn l·ªãch h·ªçc chi ti·∫øt\n‚Ä¢ 500+ links t√†i li·ªáu\n‚Ä¢ Template theo d√µi ti·∫øn ƒë·ªô\n‚Ä¢ Vocabulary tracking sheets\n\nVui l√≤ng ch·ªù trong gi√¢y l√°t...');
            
            // Here you would typically trigger a real Excel download
            // For now, we'll simulate the download process
            setTimeout(() => {
                const link = document.createElement('a');
                link.href = 'data:text/plain;charset=utf-8,IELTS%203-Month%20Study%20Plan%20-%20Complete%20Excel%20File';
                link.download = 'IELTS_3_Month_Study_Plan_Complete.xlsx';
                link.click();
                
                alert('‚úÖ Download ho√†n t·∫•t!\n\nFile ƒë√£ ƒë∆∞·ª£c l∆∞u v·ªõi t√™n: IELTS_3_Month_Study_Plan_Complete.xlsx\n\nH√£y m·ªü file b·∫±ng Excel ho·∫∑c Google Sheets ƒë·ªÉ s·ª≠ d·ª•ng ƒë·∫ßy ƒë·ªß ch·ª©c nƒÉng.');
            }, 2000);
        }

        function printSchedule() {
            window.print();
        }

        // Add some interactivity to progress bars
        document.addEventListener('DOMContentLoaded', function() {
            const progressInputs = document.querySelectorAll('input[type="number"]');
            progressInputs.forEach(input => {
                input.addEventListener('change', function() {
                    const row = this.closest('tr');
                    const progressBar = row.querySelector('.progress-fill');
                    if (progressBar) {
                        const value = parseInt(this.value) || 0;
                        const maxValue = this.max ? parseInt(this.max) : 40;
                        const percentage = Math.min((value / maxValue) * 100, 100);
                        progressBar.style.width = percentage + '%';
                    }
                });
            });
        });
    </script>
